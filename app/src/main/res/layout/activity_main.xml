<?xml version="1.0" encoding="utf-8"?>
<com.example.view.MyViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:viewgroup="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/fullscreen"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:text="FullScreen"
        android:textSize="30sp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        android:text="2"
        android:layout_marginLeft="10dp"/>
    <com.example.view.MyView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@color/holo_green_dark"
        android:text="3"
        viewgroup:layout_position = "bottom"/>


</com.example.view.MyViewGroup>