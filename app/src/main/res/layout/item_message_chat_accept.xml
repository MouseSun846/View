<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="7dip"
    android:paddingTop="7dip">

    <ImageView
        android:id="@+id/iv_message_to_head_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/slide_left_avatar_default" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="55dp"
        android:layout_toRightOf="@+id/iv_message_to_head_image"
        android:background="@mipmap/icon_message_to"
        android:gravity="center"
        android:text="我已经吃过了"
        android:paddingLeft="20dip"
        android:textColor="@color/register_text_color"
        android:textSize="16dip" />
</RelativeLayout>
