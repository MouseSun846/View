<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MySharePreference.MySharePreference"
    android:orientation="vertical">
    <Button
        android:id="@+id/btn_write"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Write"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_read"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Read"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_mysql"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="SQL"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btn_mysql_update"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal"
            android:text="Update"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/btn_mysql_look"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal"
            android:text="Look"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/btn_mysql_delete"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal"
            android:text="delete"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_sdwrite"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="sdWrite"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/btn_sdread"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="sdRead"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_showinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="30sp"
        android:textColor="#000000"
        android:background="@drawable/button"/>


</LinearLayout>